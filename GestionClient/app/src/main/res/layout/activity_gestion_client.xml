<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:background="#F2E2FD">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_fragment"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/bottom_bottom"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ajouter_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:text="Ajouter Client"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:cornerRadius="50dp"
            app:backgroundTint="#C282F0"
            app:icon="@drawable/ic_add"
            app:iconTint="@color/black"
            app:iconSize="50dp"/>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/afficher_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:text="Afficher Client"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:icon="@drawable/ic_list"
            app:iconTint="@color/black"
            app:iconSize="50dp"
            app:cornerRadius="50dp"
            app:backgroundTint="#C282F0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/modifier_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:text="Modifier"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:cornerRadius="50dp"
            app:backgroundTint="#C282F0"
            app:icon="@drawable/ic_edit"
            app:iconTint="@color/black"
            app:iconSize="50dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/supprimer_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:text="Supprimer"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:cornerRadius="50dp"
            app:backgroundTint="#C282F0"
            app:icon="@drawable/ic_delete"
            app:iconTint="@color/black"
            app:iconSize="50dp"/>

    </LinearLayout>


