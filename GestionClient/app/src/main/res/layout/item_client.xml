<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_history"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#C282F0"
        android:orientation="horizontal"
        >



        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:id="@+id/imageView"
            android:layout_height="80dp"
            android:src="@drawable/user"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginVertical="50dp"
            app:shapeAppearanceOverlay="@style/RounCorner"/>


        
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="start"
                android:layout_marginStart="25dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/id_client"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="start"
                android:layout_marginStart="25dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/nom_complet_client"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="start"
                android:layout_marginStart="25dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/adresse_client"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="start"
                android:layout_marginStart="25dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/email_client"
                />


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="start"
                android:layout_marginStart="25dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/numero_telephone_client"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="start"
                android:layout_marginStart="25dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/prix_client"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="start"
                android:layout_marginStart="25dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/montant_client"
                />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
